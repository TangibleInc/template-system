{
  "name": "@tangible/template-system",
  "description": "Template System module",
  "version": "2024.06.05",
  "homepage": "https://github.com/tangibleinc/template-system",
  "repository": "git@github.com:tangibleinc/template-system.git",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "wp-now start --open",
    "archive": "roll archive && rm -rf publish/tangible-template-system && unzip publish/tangible-template-system.zip -d publish/ && npm run test:archive",
    "// Modules": "",
    "dev": "roll dev",
    "build": "roll build",
    "format": "roll format",
    "version": "node tools/version.js",
    "list": "node tools/list-modules.js",
    "deps": "node ./tools/deps.js",
    "subrepo": "./tools/git-subrepo/bin",
    "// Test": "",
    "test": "roll run tests/index.ts",
    "test:all": "npm run test && npm run test:8.3 && npm run e2e",
    "test:8.3": "roll run tests/index.ts PHP_VERSION=8.3",
    "tdd": "roll run tests/index.ts --watch",
    "test:archive": "TEST_ARCHIVE=1 node tests/index.ts",
    "test:html": "wp-now php tests/html/index.php",
    "// Playwright browser automation": "",
    "e2e": "playwright test --config tests/playwright.config.js",
    "e2e:debug": "playwright test --config tests/playwright.config.js --debug",
    "e2e:install": "playwright install chromium",
    "e2e:ui": "playwright test --config tests/playwright.config.js --ui",
    "e2e:watch": "chokidar 'tests/e2e/**/*.js' --initial --silent -c 'playwright test -- --retries=0'",
    "// Deprecated: wp-env requires Docker": "",
    "env": "wp-env",
    "env:start": "wp-env start",
    "env:stop": "wp-env stop",
    "env:destroy": "wp-env destroy",
    "env:update": "wp-env start --update",
    "env:check": "node tools/check.js",
    "env:shell": "wp-env run cli bash",
    "env:test:shell": "wp-env run tests-cli bash",
    "env:composer": "wp-env run cli bash -c 'cd wp-content/plugins/template-system && composer install'",
    "env:test": "wp-env run tests-wordpress /var/www/html/wp-content/plugins/template-system/vendor/bin/phpunit --testdox -c /var/www/html/wp-content/plugins/template-system/phpunit.xml --verbose",
    "env:test:watch": "chokidar '**/*.php' --initial --silent --ignore node_modules --ignore vendor -c 'wp-env run tests-wordpress /var/www/html/wp-content/plugins/template-system/vendor/bin/phpunit --testdox -c /var/www/html/wp-content/plugins/template-system/phpunit.xml --verbose'",
    "env:test:7.4": "WP_ENV_PHP_VERSION=7.4 wp-env start && npm run test",
    "env:test:8.2": "WP_ENV_PHP_VERSION=8.2 wp-env start && npm run test",
    "// HTML profiler and snapshots - See /tests/html": "",
    "start:xdebug": "wp-env start --xdebug=develop --update",
    "html": "wp-env run tests-wordpress php wp-content/plugins/template-system/tests/html/index.php",
    "html:profile": "wp-env run tests-wordpress php wp-content/plugins/template-system/tests/html/index.php profile",
    "html:snapshot": "wp-env run tests-wordpress php wp-content/plugins/template-system/tests/html/index.php snapshot"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "@tangible/now": "^1.0.8",
    "@tangible/roller": "^2.0.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@wordpress/e2e-test-utils-playwright": "^1.0.0",
    "@wordpress/env": "^10.0.0",
    "chokidar-cli": "^3.0.0",
    "globby": "^14.0.1",
    "testra": "^2.1.3",
    "zip-lib": "^1.0.4"
  }
}
