{
  "name": "tangible-template-system",
  "description": "Template System module",
  "homepage": "https://github.com/tangibleinc/template-system",
  "repository": "git@github.com:tangibleinc/template-system.git",
  "type": "module",
  "tangible": {
    "deployType": "module"
  },
  "scripts": {
    "prepare:deps": "for module in editor interface logic template system; do cd $module; npm install --production; done",
    "version": "node tools/version.js",
    "// Run npm run dev/build/format [module name]": "",
    "dev": "roll dev",
    "build": "roll build",
    "format": "roll format",
    "build:all": "for module in editor interface logic template system; do roll build $module; done",
    "format:all": "for module in editor interface logic template system; do roll format $module; done",
    "// Local environment - https://developer.wordpress.org/block-editor/reference-guides/packages/packages-env": "",
    "test": "npm run env:test",
    "test:e2e": "playwright test",
    "test:e2e:watch": "chokidar 'tests/e2e/**/*.js' --initial -c 'npm run test:e2e -- --retries=0 {path}'",
    "test:e2e:ui": "playwright test --ui",
    "env": "wp-env",
    "env:start": "wp-env start",
    "env:update": "wp-env start --update",
    "env:test": "wp-env run tests-wordpress /var/www/html/wp-content/plugins/template-system/vendor/bin/phpunit -c /var/www/html/wp-content/plugins/template-system/phpunit.xml --verbose",
    "env:test:7.4": "WP_ENV_PHP_VERSION=7.4 wp-env start && npm run env:test",
    "env:test:8.2": "WP_ENV_PHP_VERSION=8.2 wp-env start && npm run env:test",
    "env:stop": "wp-env stop",
    "env:destroy": "wp-env destroy"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@tangible/roller": "^1.7.2",
    "@wordpress/e2e-test-utils-playwright": "^0.16.0",
    "@wordpress/env": "^8.12.0",
    "chokidar": "^3.5.3",
    "chokidar-cli": "^3.0.0"
  }
}
